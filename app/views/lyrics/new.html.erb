<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@song, @lyric] do |f| %>
      <%= f.label :content %>
      <%= f.text_area :content, class: "form-control" %>
      <%= f.hidden_field :song_id, value: params[:song_id] %>
      <%= f.submit "Add", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
