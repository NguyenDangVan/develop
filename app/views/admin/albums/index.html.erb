<% provide :title, "Dashboard all albums" %>
<%= form_tag admin_albums_path, method: :get do %>
  <div class="categories c-cate">
    <div class="container">
      <div class="categories-right">
        <%= text_field_tag :search, params[:search], class: "form-controll" %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
      <div class="clearfix"> </div>
    </div>
  </div>
<% end %>
<div class="categories c-cate">
  <div class="container">
    <div class="categories-right">
      <%= link_to "back to dashboard", admin_root_url, class: "btn btn-primary" %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col">
    <div class="card-header border-bottom">
      <h6 class="m-0">All Albums</h6>
    </div>
    <table class="table mb-0">
      <thead class="bg-light">
        <tr>
          <th>Title</th>
          <th>Artist</th>
          <th>Category</th>
          <th>Description</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @albums.each do |album| %>
          <tr>
            <td><%= album.title %></td>
            <td><%= album.artist.name %></td>
            <td><%= album.category.name %></td>
            <td class="td-descrip"><%= album.description %></td>
            <td><%= link_to "Edit", edit_album_path(album) %></td>
            <td><%= link_to "Delete", album, method: :delete, data: {confirm: "Delete album?"} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @albums, theme: "twitter-bootstrap-3" %>
  </div>
</div>
<%= link_to "New album", new_album_path, class: "btn btn-primary" %>
