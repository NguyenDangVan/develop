<% provide :title, "Dashboard all artists" %>
<%= form_tag admin_artists_path, method: :get do %>
  <div class="categories c-cate">
    <div class="container">
      <div class="categories-right">
        <%= text_field_tag :search, params[:search], class: "form-controll" %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
      <div class="clearfix"> </div>
    </div>
  </div>
<% end %>
<div class="categories c-cate">
  <div class="container">
    <div class="categories-right">
      <%= link_to "back to dashboard", admin_root_url, class: "btn btn-primary" %>
    </div>
  </div>
</div>
<div class="users">
<div class="row">
  <div class="col">
    <div class="card-header border-bottom">
      <h6 class="m-0">All Artists</h6>
    </div>
    <table class="table mb-0">
      <thead class="bg-light">
        <tr>
          <th>Artist Name</th>
          <th>Info</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @artists.each do |artist| %>
          <tr>
            <td><%= artist.name %></td>
            <td class="td-info"><%= artist.info %></td>
            <td><%= link_to "Edit", edit_artist_path(artist) %></td>
            <td><%= link_to "Delete", artist, method: :delete, data: {confirm: "Delete artist?"} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>
<div class="paginator">
  <%= paginate @artists, remote: true, theme: "twitter-bootstrap-3" %>
<div>
<%= link_to "New artist", new_artist_path, class: "btn btn-primary" %>
