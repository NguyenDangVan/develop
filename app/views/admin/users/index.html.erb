<% provide :title, "Dashboard all users" %>
<%= form_tag admin_users_path, method: :get do %>
  <div class="categories c-cate">
    <div class="container">
      <div class="categories-left">
        <ul class="options">
          <li><%= link_to "All songs", songs_path %></li>
          <li><%= link_to "All artists", artists_path %></li>
          <li>
            <%= link_to "All categories", categories_path %>
          </li>
          <li><%= link_to "All albums", albums_path %></li>
        </ul>
      </div>
      <div class="categories-right">
        <%= text_field_tag :search, params[:search], class: "form-controll" %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
      <div class="clearfix"> </div>
    </div>
  </div>
<% end %>
<div class="categories c-cate">
  <div class="container">
    <div class="categories-right">
      <%= link_to "back to dashboard", admin_root_url, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="card-header border-bottom">
      <h6 class="m-0">All Users</h6>
    </div>
    <table class="table mb-0">
      <thead class="bg-light">
        <tr>
          <th>User Name</th>
          <th>Email</th>
          <th>Age</th>
          <th>Created at</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.age %></td>
            <td><%= user.created_at %></td>
            <td><%= link_to "Edit", edit_user_path(user.id) %></td>
            <td><%= link_to "Delete", user, method: :delete, data: {confirm: "Delete user?"} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @users, theme: "twitter-bootstrap-3" %>
  </div>
</div>
