<% provide :title, "Dashboard all categories" %>
<%= form_tag admin_categories_path, method: :get do %>
  <div class="categories c-cate">
    <div class="container">
      <div class="categories-right">
        <%= text_field_tag :search, params[:search], class: "form-controll" %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
      <div class="clearfix"> </div>
    </div>
  </div>
<% end %>
<div class="categories c-cate">
  <div class="container">
    <div class="categories-right">
      <%= link_to "back to dashboard", admin_root_url, class: "btn btn-primary" %>
    </div>
  </div>
</div>
<div class="users">
<div class="row">
  <div class="col">
    <div class="card-header border-bottom">
      <h6 class="m-0">All Categories</h6>
    </div>
    <table class="table mb-0">
      <thead class="bg-light">
        <tr>
          <th>Category</th>
          <th class="td-edit">Edit</th>
          <th class="td-edit">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |categorie| %>
          <tr>
            <td><%= categorie.name %></td>
            <td><%= link_to "Edit", edit_category_path(categorie) %></td>
            <td><%= link_to "Delete", categorie, method: :delete, data: {confirm: "Delete categorie?"} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>
<div class="paginator">
  <%= paginate @categories, remote: true, theme: "twitter-bootstrap-3" %>
<div>
<%= link_to "New categorie", new_category_path, class: "btn btn-primary" %>
