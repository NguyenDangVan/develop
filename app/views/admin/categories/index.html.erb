<div class="card mb-3 my-table" style="width: 100%;">
  <div class="card-header">
    <i class="fas fa-table"></i>
    Data Categories
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
          <th>Category</th>
          <th class="td-edit">Edit</th>
          <th class="td-edit">Delete</th>
        </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= link_to "Edit", "#" %></td>
              <td><%= link_to "Delete", category, method: :delete, data: {confirm: "Delete category?"} %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>
<%= paginate @categories, theme: "twitter-bootstrap-3" %>
<%= link_to "New category", new_category_path, class: "btn btn-primary" %>
<div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>

