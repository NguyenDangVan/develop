<li>
  <%= gravatar_for user, size: 50 %>
  <div class="info-user">
    <p>Name:<%= link_to user.name, user %></p>
    <p>Email:<%= user.email %></p>
  </div>
  <div class ="update-user">
    <% if current_user.admin? && !current_user?(user) %> <%= link_to "update", edit_user_path(user.id) %>
    <% end %>
  </div>
  <div class ="update-user">
    <% if current_user.admin? && !current_user?(user) %> <%= link_to "delete", user, method: :delete, data: {confirm: "You sure?"} %>
    <% end %>
  </div>
</li>
