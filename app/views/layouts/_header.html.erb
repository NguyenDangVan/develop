<div class="header">
    <div class="container">
      <!-- header -->
        <!-- logo -->
        <div class="logo">
          <%= link_to image_tag("logo.png"), root_url %>
        </div>
        <!-- logo -->
        <!-- top-nav -->
        <div class="top-nav">
          <span class="menu"> </span>
          <ul>
            <li class="active"><%= link_to "Home", root_url %></li>
            <% if logged_in? && current_user.admin? %>
              <li><%= link_to "Manage", albums_path %></li>
            <% elsif logged_in? %>
              <li><%= link_to "My Playlist", "#" %></li>
            <% else %>
              <li><%= link_to "Album", albums_path %></li>
            <% end %>
            <% if logged_in? %>
              <li><%= link_to "Others", users_path %></li>
              <li><%= link_to "Account", "#" %>
                <ul class="sub-menu">
                  <li><%= link_to "Profile", current_user %></li>
                  <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                  <li>
                    <%= link_to "Log out", logout_path, method: :delete %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to "Log in", login_path %></li>
            <% end %>
            <div class="clearfix"> </div>
          </ul>
        </div>
        <div class="clearfix"> </div>
        <!-- top-nav -->
        <!-- script-for-menu -->
        <script>
          $(document).ready(function(){
            $("span.menu").click(function(){
              $(".top-nav ul").slideToggle(200);
            });
          });
        </script>
        <!-- script-for-menu -->
      </div>
      <!-- header -->
    </div>
