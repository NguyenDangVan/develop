<div class="header">
  <div class="container">
    <div class="logo">
      <%= link_to image_tag("logo.png"), root_path %>
    </div>
    <div class="top-nav">
      <span class="menu"> </span>
      <ul class="ul-header">
        <li><%= link_to "Home", root_url %></li>
        <li><%= link_to "Album", albums_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li class="dropdown-menu-user"><%= link_to "My Playlist", current_user %></li>
              <li class="dropdown-menu-user"><%= link_to "My Favourite", favorite_songs_user_path(current_user) %></li>
              <li class="dropdown-menu-user"><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li class="dropdown-menu-user">
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            <% else %>
              <li><%= link_to "Log in", login_path %></li>
            <% end %>
        <div class="clearfix"> </div>
      </ul>
      </div>
    <div class="clearfix"> </div>
  </div>
</div>
