<% provide :title, @artist.name %>
<div class="header top-header">
  <div class="categories c-cate">
    <div class="container">
      <div class="categories-left">
        <%= render "static_pages/categories_left" %>
      </div>
      <div class="clearfix"> </div>
    </div>
  </div>
    <div class="content">
      <div class="container">
      <div class="col-md-8 content-left">
        <div class="artical-details">
          <h2><%= @artist.name %></h2>
          <div class="artical-details-info">
            <div class="artical-details-info-left">
                <%= image_tag("artists/post6.jpg") %>
            </div>
            <div class="artical-details-info-right">
              <p><strong>Name:</strong> <%= @artist.name %>,</p>
              <p><strong>Genre:</strong> Pop, Rock,</p>
              <p><strong>Country:</strong> US ,</p>
              <div class="dicription">
                <p><strong>Infomation :</strong> <%= @artist.info %></p>
              </div>
              <%= link_to "all songs >>", artist_songs_path(@artist), class: "download" %>
              <p></p>
            </div>
            <div class="clearfix"> </div>
          </div>
        </div>
        <div class="clearfix"> </div>
      </div>
      <div class="col-md-4 content-right">
        <div class="recent-add">
            <div class="sreen-gallery-cursual">
              <link href="css/owl.carousel.css" rel="stylesheet">
        <div id="owl-demo" class="owl-carousel text-center">
          <div class="item">
          <%= image_tag("artists/post1.jpg", class: "lazyOwl") %>
          </div>
        <div class="item">
          <%= image_tag("artists/post5.jpg", class: "lazyOwl") %>
        </div>
        <div class="item">
          <%= image_tag("artists/post6.jpg", class: "lazyOwl") %>
        </div>
        </div>
        </div>
      </div>
      <div class="clearfix"> </div>
    </div>
  </div>
</div>
