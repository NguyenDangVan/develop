
<div class="row">
  <div class="col-md-6 col-md-offset-3">
<%= form_for(@song) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :album %>
  <%= f.select :album_id, options_from_collection_for_select(Album.all, :id, :title)  %>
  <%= f.label :lyric %>
  <%= f.text_area :lyric, class: "form-control" %>
  <span class="audio">
    <%= f.file_field :audio %>
  </span>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
</div>
</div>
