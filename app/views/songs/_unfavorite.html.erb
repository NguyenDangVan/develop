<%= form_for(current_user.favorite_for_song.find_by(song_id: @song.id),
  html: {method: :delete}, remote: true) do |f| %>
  <%= button_tag(type: "submit", class: "btn btn-light") do %>
    <%= image_tag "icon/heart.png", class: "add-favourite" %> <%= current_user.favorite_songs.count %>
