<% provide :title, "Album" %>
<% provide :button_text, "create your album" %>
<h1>Album</h1>
<div class="row">
    <div class="col-md-7 col-md-offset-1 new-items"  >
    <%= form_for @album do |f| %>
    <%= render "shared/error_messages_artist" %>
      <%= f.label :title %>
      <%= f.text_field :title  %>
      <%= f.label :artist_id %>
      <%= f.text_field :artist_id  %>
      <%= f.label :category_id %>
      <%= f.text_field :category_id  %>
      <%= f.label :description %>
      <%= f.text_area :description  %>
      <%= f.submit yield(:button_text) , class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
