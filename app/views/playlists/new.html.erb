<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@user, @playlist] do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
      <%= f.hidden_field :user_id, value: params[:user_id] %>
      <%= f.submit "Create", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
