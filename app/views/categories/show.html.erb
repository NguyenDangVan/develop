<% provide :title, @category.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @category.name %>
      </h1>
      <p><%= link_to "All categories", categories_path %></p>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @category.albums.any? %>
      <h3>Albums (<%= @category.albums.count %>)</h3>
      <ol class="microposts">
        <%= render @albums %>
      </ol>
      <%= paginate @albums, theme: "twitter-bootstrap-3" %>
    <% end %>
  </div>
</div>
